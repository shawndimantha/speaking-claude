#!/bin/bash
# Speaking Claude - Interactive Multi-Turn Mode
# Chat with Claude and hear responses spoken aloud

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PYTHON="/Library/Frameworks/Python.framework/Versions/3.9/bin/python3.9"

# Check for API key
if [ -z "$CARTESIA_API_KEY" ]; then
    echo "Error: CARTESIA_API_KEY not set"
    echo "Run: export CARTESIA_API_KEY='your-key'"
    exit 1
fi

cd "$SCRIPT_DIR"
exec "$PYTHON" speaking_claude_multi.py "$@"
